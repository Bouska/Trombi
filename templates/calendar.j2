{% extends "index.j2" %}

{% block head %}

<link rel='stylesheet' href='{{ url_for('static', filename='fullcalendar.css') }}' />
<script src='{{ url_for('static', filename='js/moment.min.js') }}'></script>
<script src='{{ url_for('static', filename='js/fullcalendar.js') }}'></script>

{% endblock %}

{% block body %}

<div class="calendar_legend">
  <span class="calendar_legend_birthday">Birthday</span>
  <br />
  <span class="calendar_legend_arrival">Arrival</span>
</div>

<div class="calendar_container">
  <div id='calendar'></div>
</div>

<script type="text/javascript">

$(document).ready(function() {
  // page is now ready, initialize the calendar...
  $('#calendar').fullCalendar({
    firstDay: 1, // Set first day of the week as monday
    aspectRatio: 2,

    eventSources: [
      {% for events in events_list %}
      {
        events: {{ events | safe }}
      },
      {% endfor %}
    ]

  })
});

</script>

{% endblock %}
